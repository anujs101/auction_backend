# Production Environment Configuration
# Database Configuration
DATABASE_URL="postgresql://auction_user:${POSTGRES_PASSWORD}@postgres:5432/auction_backend"

# Redis Configuration
REDIS_URL="redis://redis:6379"

# JWT Configuration
JWT_SECRET="${JWT_SECRET}"
JWT_EXPIRES_IN="24h"

# Solana Configuration
SOLANA_RPC_URL="https://api.mainnet-beta.solana.com"
SOLANA_PROGRAM_ID="${SOLANA_PROGRAM_ID}"
SOLANA_COMMITMENT="confirmed"
PRIVATE_KEY="${PRIVATE_KEY}"

# Server Configuration
PORT=3000
NODE_ENV="production"

# CORS Configuration - Update with your production domains
CORS_ORIGIN="${CORS_ORIGIN}"

# Rate Limiting - Production values
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# WebSocket Configuration
WEBSOCKET_CORS_ORIGIN="${WEBSOCKET_CORS_ORIGIN}"

# Logging Configuration
LOG_LEVEL="warn"
LOG_FILE="logs/app.log"

# Bull Queue Configuration
BULL_REDIS_URL="redis://redis:6379"

# Security
HELMET_CSP_ENABLED=true

# Performance
NODE_OPTIONS="--max-old-space-size=2048"
